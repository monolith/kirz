<% size = size || :small %>
<% x = x || 0 %>
<% y = y || 0 %>


<% positioning = true if positioning.nil? %>


<% if positioning %>
<div class=thumb id=thumb_<%= post.id.to_s %>><%= link_to image_tag(post.image.url(size), :onload => "new Effect.Opacity('thumb_#{post.id.to_s}', { from: 0, to: 1, duration: 2 }); $('thumb_rollover_#{ post.id.to_s }').hide(); return false;", :onmouseover => "$('thumb_rollover_#{ post.id.to_s }').appear(); return false;", :onmouseout => "$('thumb_rollover_#{ post.id.to_s }').hide(); return false;", :style=>"position:absolute; top: #{y}px;left: #{x}px;"), post_path(post) %></div>

<div style="position:absolute; top:<%= y + 5 %>px; left: <%= x + 5 %>px;" class=rollover id=thumb_rollover_<%= post.id.to_s %>>
  <%= post.short_description %>
</div>


<% else %>

<div class=thumb id=thumb_<%= post.id.to_s %>><%= link_to image_tag(post.image.url(size), :onload => "new Effect.Opacity('thumb_#{post.id.to_s}', { from: 0, to: 1, duration: 2 }); return false;", :style=>"position:relative;"), post_path(post) %></div>


<% end %>

