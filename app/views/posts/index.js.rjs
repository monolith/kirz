
page[:pagination].hide
page.replace_html :loading, :text => "Loading more page results..."


@column.each_with_index do |posts, index|
        page.insert_html :bottom,
                         "column_#{ index+1 }",
                         :partial => 'post', :collection => posts
end


if @posts.total_pages > @posts.current_page
  page.call 'checkScroll'
else
  page[:loading].hide
  page.insert_html :after, :loading, :text => "<div id=complete>That's it folks!</div>"
end

